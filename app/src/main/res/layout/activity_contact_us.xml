<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorSignInBg"
    tools:context=".activity.ContactUsActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="@dimen/dimen_12">

    <ImageView
        android:layout_width="@dimen/dimen_28"
        android:layout_height="@dimen/dimen_22"
        android:layout_gravity="left"
        android:src="@drawable/ic_back" />

    <in.lanetbit.utils.customView.TextViewUbuntuBold
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_28"
        android:text="@string/contact_us_name"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/text_large" />

        <in.lanetbit.utils.customView.TextViewUbuntuLight
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="@dimen/dimen_18"
            android:layout_marginLeft="@dimen/dimen_2"
            android:layout_marginRight="@dimen/dimen_2"
            android:text="@string/contact_desc_name"
            android:textColor="@color/colorTextGrey"
            android:textSize="@dimen/text_normal" />

        <LinearLayout
            android:id="@+id/ll_passport"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dimen_28"
            android:background="@drawable/edit_text_border"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/padding_12">
            <ImageView
                android:layout_width="@dimen/dimen_22"
                android:layout_height="@dimen/dimen_22"
                android:src="@drawable/ic_email"
                android:layout_marginRight="@dimen/dimen_8"/>
            <in.lanetbit.utils.customView.TextViewUbuntuMedium
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/email_us_name"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/text_normal" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_arrow" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dimen_12"
            android:background="@drawable/edit_text_border"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/padding_12">
            <ImageView
                android:layout_width="@dimen/dimen_22"
                android:layout_height="@dimen/dimen_22"
                android:src="@drawable/ic_call"
                android:layout_marginRight="@dimen/dimen_8"/>
            <in.lanetbit.utils.customView.TextViewUbuntuMedium
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/call_us_name"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/text_normal" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_arrow" />
        </LinearLayout>


    </LinearLayout>
    </RelativeLayout>

</ScrollView>