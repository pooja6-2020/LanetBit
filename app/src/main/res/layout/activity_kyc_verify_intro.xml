<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorSignInBg"
    tools:context=".activity.KycVerifyIntroActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="510dp"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/dimen_120"
            android:layout_marginTop="@dimen/dimen_82"
            android:layout_marginBottom="@dimen/dimen_82"
            android:background="@drawable/left_half_circle_shape" />

        <ImageView
            android:id="@+id/iv_parent_logo"
            android:layout_width="@dimen/dimen_68"
            android:layout_height="@dimen/dimen_68"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dimen_22"
            android:src="@drawable/ic_logo_lanetbit" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_parent_logo"
            android:orientation="vertical">

            <in.lanetbit.utils.customView.TextViewUbuntuLight
                android:id="@+id/tv_no_verify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="@dimen/dimen_16"
                android:layout_marginRight="@dimen/dimen_12"
                android:background="@drawable/green_border_button"
                android:gravity="center"
                android:paddingLeft="@dimen/padding_12"
                android:paddingRight="@dimen/padding_12"
                android:text="@string/skip_name"
                android:textColor="@color/colorAccent" />

            <in.lanetbit.utils.customView.TextViewUbuntuMedium
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_32"
                android:gravity="center"
                android:text="@string/title_kyc_name"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/text_normal_17" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dimen_28"
                android:src="@drawable/ic_kyc_verification" />

            <in.lanetbit.utils.customView.TextViewUbuntuMedium
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_28"
                android:layout_marginTop="@dimen/dimen_28"
                android:layout_marginRight="@dimen/dimen_28"
                android:gravity="left"
                android:text="@string/title_kyc_verify_name"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/text_normal_17" />

            <in.lanetbit.utils.customView.TextViewUbuntuLight
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="@dimen/dimen_28"
                android:layout_marginTop="@dimen/dimen_18"
                android:layout_marginRight="@dimen/dimen_28"
                android:text="@string/kyc_desc_name"
                android:textColor="@color/colorTextGrey"
                android:textSize="@dimen/text_normal" />

            <in.lanetbit.utils.customView.TextViewUbuntuMedium
                android:id="@+id/tv_kyc_verify"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_28"
                android:layout_marginTop="@dimen/dimen_32"
                android:layout_marginRight="@dimen/dimen_28"
                android:background="@drawable/green_button_bg"
                android:gravity="center"
                android:padding="@dimen/padding_12"
                android:text="@string/title_verify_name"
                android:textAllCaps="true"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/text_normal_17" />

            <in.lanetbit.utils.customView.TextViewUbuntuMedium
                android:id="@+id/tv_no_id_verify"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_22"
                android:gravity="center"
                android:text="@string/title_kyc_dont_name"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/text_normal_17"
                android:textStyle="bold"
                android:layout_marginBottom="@dimen/dimen_28"/>

        </LinearLayout>

    </RelativeLayout>
</ScrollView>